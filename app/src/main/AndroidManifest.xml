<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.newapp">

    <queries>
        <package android:name="com.kundan.testopenapp" />
        <package android:name="com.Galanto.Game1" />
        <package android:name="com.Galanto.Game2" />
        <package android:name="com.Galanto.Juice" />
        <package android:name="com.Galanto.Calibration" />
        <package android:name="com.galanto.GalantoHealth" />
    </queries>


    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewApp">
        <activity
            android:name="com.galanto.GalantoHealth.SplashScreen"
            android:exported="true"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.galanto.GalantoHealth.AddNewUser"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.galanto.GalantoHealth.LoginActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateVisible|adjustPan">

        </activity>
        <activity
            android:name="com.galanto.GalantoHealth.MainActivity2"
            android:screenOrientation="sensorLandscape" /> <!-- <activity android:name=".Dashboard" /> -->
        <activity
            android:name="com.galanto.GalantoHealth.MainActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.galanto.GalantoHealth.Dashboard"
            android:screenOrientation="sensorLandscape">

        </activity>
    </application>

</manifest>